  "dependencies": {
    "argon2": "^0.28.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.8.0",
    "sequelize-typescript": "^2.1.1",
    "shortid": "^2.2.16",
    "sqlite3": "^5.0.2",
    "ts-custom-error": "^3.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/moment": "^2.13.0",

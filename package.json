    "@types/validator": "^13.6.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.3",
    "mocha": "^9.1.3",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "eslint --cache --fix",
      "pretty-quick --staged",
      "git add"
    ]
  }
